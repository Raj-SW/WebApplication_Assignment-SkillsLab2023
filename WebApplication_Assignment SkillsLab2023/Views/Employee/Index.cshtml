@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

<h2>Employee view</h2>
<h2>@Session["CurrentUser"] is logged in</h2>

<div class="row">
    <div class="col-md">
        <table cellspacing="10" cellpadding="10">
            <tr>
                <th>Training Id</th>
                <th>Training Name</th>
                <th>Training Description</th>
                <th>Training Status</th>
                <th>Registration Dealine</th>
                <th>Seats Available</th>
                <th>Actions</th>
            </tr>
            @{
                foreach (var item in ViewBag.ListOfTrainings)
                {
                    <tr>
                        <td>@item.TrainingId</td>
                        <td>@item.TrainingName</td>
                        <td>@item.TrainingDescription</td>
                        <td>@item.TrainingStatus</td>
                        <td>@item.TrainingRegistrationDeadline</td>
                        <td>@item.SeatsAvailable</td>
                        <td>
                            <!-- Button to trigger modal -->
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#registrationModal" onclick='PopulateModal(@Html.Raw(Json.Encode(item)))'>
                                Enroll
                            </button>

                        </td>
                    </tr>
                }
            }
        </table>
    </div>
</div>

<!-- Registration Modal with File Upload -->
