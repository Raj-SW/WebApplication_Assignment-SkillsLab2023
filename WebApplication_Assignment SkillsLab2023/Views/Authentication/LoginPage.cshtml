
@{
    ViewBag.Title = "Login Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
        
}

<div class="row">
    <div class="col">

        <h2>Login</h2>

        <form action="/login" method="post" onsubmit="">

            <label for="userId">User ID:</label>
            <input type="text" id="userId" name="userId" required value="101">
            <br>

            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required value="1">
            <br>

            <button type="submit" name="loginBtn" value="Login" id="loginBtn" onclick="login()">Login</button>
        </form>

        <p>
            Don't have an account? @Html.ActionLink("Register Here", "RegistrationPage", "Authentication", new { msg = "Hello from action link" }, null)
        </p>

    </div>
</div>