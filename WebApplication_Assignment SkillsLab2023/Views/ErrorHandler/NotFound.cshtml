@{
    ViewBag.Title = "Page Not Found";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="jumbotron">
        <h1 class="display-4">404 - Not Found</h1>
        <p class="lead">The requested page could not be found.</p>
        <hr class="my-4">
        <p>Please check the URL and try again. If you believe this is an error, contact support.</p>
        <p class="lead">
            <a class="btn btn-primary btn-lg" href="/Authentication/LoginPage" role="button">Log In Again</a>
            <a class="btn btn-secondary btn-lg" href="javascript:history.back()" role="button">Go Back</a>
        </p>
    </div>
</div>
